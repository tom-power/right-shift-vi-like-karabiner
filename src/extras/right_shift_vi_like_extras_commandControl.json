{
  "title": "right shift vi like extras command control",
  "rules": [
    {
      "description": "Control b (left_command+b to right_control+b)",
      "manipulators": [{
        "from": {
          "key_code": "b",
          "modifiers": {
            "mandatory": ["left_command"]
          }
        },
        "to": [{
          "key_code": "b",
          "modifiers": [
            "right_control"
          ]
        }],
        "type": "basic"
      }]
