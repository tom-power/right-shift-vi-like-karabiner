{
  "title": "right shift vi like extras",
  "rules": [{
      "description": "Thin arrow (right_shift+- to ->)",
      "manipulators": [{
        "from": {
          "key_code": "hyphen",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
            "key_code": "hyphen"
          },
          {
            "key_code": "period",
            "modifiers": [
              "left_shift"
            ]
          }
        ],
        "type": "basic"
      }]
    },
    {
      "description": "Fat arrow (right_shift+= to =>)",
      "manipulators": [{
        "from": {
          "key_code": "equal_sign",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
            "key_code": "equal_sign"
          },
          {
            "key_code": "period",
            "modifiers": [
              "left_shift"
            ]
          }
        ],
        "type": "basic"
      }]
    },
    {
      "description": "Single quote (right_shift+q to single quote)",
      "manipulators": [{
        "from": {
          "key_code": "q",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "quote"
        }],
        "type": "basic"
      }]
    },
    {
      "description": "Rename (right_shift+r to shift+f6)",
      "manipulators": [{
        "from": {
          "key_code": "r",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "f6",
          "modifiers": [
            "left_shift"
          ]
        }],
        "type": "basic"
      }]
    },
    {
      "description": "Search focus (right_shift+g to l+command)",
      "manipulators": [{
        "from": {
          "key_code": "g",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "l",
          "modifiers": [
            "right_command"
          ]
        }],
        "type": "basic"
      }]
    },
    {
      "description": "./ (right_shift+i to ./)",
      "manipulators": [{
        "from": {
          "key_code": "i",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "period"
        }, {
          "key_code": "slash"
        }],
        "type": "basic"
      }]
    },
    {
      "description": "~/ (right_shift+` to ~/)",
      "manipulators": [{
        "from": {
          "key_code": "non_us_backslash",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "left_shift"
          ]
        }, {
          "key_code": "slash"
        }],
        "type": "basic"
      }]
    }
  ]
}
