{
  "title": "right shift vi like extras symbols",
  "rules": [{
      "description": "Thin arrow (right_shift+- to ->)",
      "manipulators": [{
        "from": {
          "key_code": "hyphen",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
            "key_code": "hyphen"
          },
          {
            "key_code": "period",
            "modifiers": [
              "left_shift"
            ]
          }
        ],
        "type": "basic"
      }]
    },
    {
      "description": "Fat arrow (right_shift+= to =>)",
      "manipulators": [{
        "from": {
          "key_code": "equal_sign",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
            "key_code": "equal_sign"
          },
          {
            "key_code": "period",
            "modifiers": [
              "left_shift"
            ]
          }
        ],
        "type": "basic"
      }]
    },
    {
      "description": "./ (right_shift+i to ./)",
      "manipulators": [{
        "from": {
          "key_code": "i",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "period"
        }, {
          "key_code": "slash"
        }],
        "type": "basic"
      }]
    },
    {
      "description": "../ (right_shift+left_shift+i to ../)",
      "manipulators": [{
        "from": {
          "key_code": "i",
          "modifiers": {
            "mandatory": [
              "left_shift",
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "period"
        }, {
          "key_code": "period"
        }, {
          "key_code": "slash"
        }],
        "type": "basic"
      }]
    },
    {
      "description": "~/ (right_shift+` to ~/)",
      "manipulators": [{
        "from": {
          "key_code": "grave_accent_and_tilde",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "left_shift"
          ]
        }, {
          "key_code": "slash"
        }],
        "type": "basic"
      }]
    }
  ]
}
